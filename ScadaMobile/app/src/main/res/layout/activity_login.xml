<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f8fc"
    android:focusableInTouchMode="true"
    android:gravity="center"
    tools:context=".Login">

    <EditText
        android:id="@+id/username"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_user"
        android:ems="10"
        android:hint="Tên đăng nhập"
        android:inputType="textPersonName"
        android:textColor="#4c4c4c"
        android:textColorHint="#7e7c84"

        android:textSize="15dp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_pass"
        android:ems="10"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:textColor="#4c4c4c"
        android:textColorHint="#7e7c84"
        android:textSize="15dp" />
    <CheckBox
        android:id="@+id/checkBox"
        android:text="Nhớ đăng nhập"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:layout_centerHorizontal="true"
        android:textColor="#4c4c4c"

        />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="114dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:background="#4e9ded"
        android:ems="10"
        android:text="Đăng nhập"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Công Ty Cổ Phần Cấp Nước Hải Phòng"
            android:gravity="center"
            android:textColor="#3030f4"
            android:textSize="15dp"
            android:paddingBottom="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Phòng Công Nghệ Thông Tin"
            android:gravity="center"
            android:textColor="#3030f4"
            android:textSize="14dp"
            android:paddingBottom="5dp"
            />

    </LinearLayout>
</RelativeLayout>